#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <15>;
        rows = <7>;
        map = <
RC(0,0)   RC(0,1)                                                                    RC(0,8)
          RC(1,7) RC(1,6) RC(1,5) RC(1,4) RC(1,3) RC(1,2) RC(1,1)                    RC(1,8)  RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13) RC(1,14)
          RC(2,7) RC(2,6) RC(2,5) RC(2,4) RC(2,3) RC(2,2) RC(2,1)                    RC(2,8)  RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13) RC(2,14)
          RC(3,7) RC(3,6) RC(3,5) RC(3,4) RC(3,3) RC(3,2)                                     RC(3,9) RC(3,10) RC(3,11) RC(3,12) RC(3,13) RC(3,14)
          RC(4,7) RC(4,6) RC(4,5) RC(4,4) RC(4,3) RC(4,2) RC(4,1)                    RC(4,8)  RC(4,9) RC(4,10) RC(4,11) RC(4,12) RC(4,13) RC(4,14)
          RC(5,7) RC(5,6) RC(5,5) RC(5,4) RC(5,3)                                                     RC(5,10) RC(5,11) RC(5,12) RC(5,13) RC(5,14)
                                                          RC(6,1) RC(6,2)   RC(6,9)  RC(6,8)
                                                                  RC(6,3)   RC(6,10)
                                                  RC(6,4) RC(6,5) RC(6,6)   RC(6,13) RC(6,12) RC(6,11)
        >;

    };

    kscan0: kscan_composite {
        compatible = "zmk,kscan-composite";
        label = "KSCAN0";
        columns = <15>;
        rows = <7>;

        // Include switch from dongle
        direct {
            kscan = <&kscan2>;
        };

    };

	kscan2: kscan2 {
		compatible = "zmk,kscan-gpio-direct";
		label = "KSCAN2";
		input-gpios = <&gpio1 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
	};

};
